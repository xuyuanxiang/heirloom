{
  "name": "heirloom",
  "version": "1.0.0",
  "description": "My pure,reusable toolbox for front-end projects written in ES6 whithout any frameworks.",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:onlyChanged": "jest -o",
    "test:watch": "jest -- --watch",
    "script-name": "babel-node script.js",
    "**/*/script-name": "babel-node **/*/script.js",
    "prewatch": "rm -rf dist",
    "watch": "webpack -d --watch",
    "build": "babel src -d dist",
    "prebuild": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xuyuanxiang/heirloom.git"
  },
  "keywords": [
    "ES6",
    "JavaScript"
  ],
  "author": "xuyuanxiang (chaos@xuyuanxiang.cn)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xuyuanxiang/heirloom/issues"
  },
  "homepage": "https://github.com/xuyuanxiang/heirloom#readme",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-jest": "^12.0.2",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "jest-cli": "^12.0.2",
    "webpack": "^1.13.0"
  }
}
